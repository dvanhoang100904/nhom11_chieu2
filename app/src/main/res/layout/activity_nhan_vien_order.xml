<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f6cf"
        android:orientation="horizontal"
        android:paddingTop="14dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:background="@drawable/imgemployes"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="Nhân Viên"
            android:textColor="#000"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/imgbanner"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imgtable"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChonBanOrder"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/background_nhanvien_quanly"
                android:text="Chọn Bàn Order"
                android:textSize="18sp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imgcounter"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChonOrder"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/background_nhanvien_quanly"
                android:text="Chọn Order"
                android:textSize="18sp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imgbtnbill"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLuuTruThanhToan"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/background_nhanvien_quanly"
                android:text="Lưu Trữ Thanh Toán"
                android:textSize="18sp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/imglogout"></ImageView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDangXuat"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:background="@drawable/background_dangnhap_dangxuat"
                android:text="ĐĂNG XUẤT"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
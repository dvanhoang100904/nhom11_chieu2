<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#F6F6F6"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivHinhAnhOrder"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên order"
            android:textSize="22sp">

        </TextView>

        <TextView
            android:id="@+id/tvGiaOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Giá order"
            android:textSize="16sp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGiamOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#D3D3D3"
                android:text="-"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:id="@+id/tvSoLuongOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold"></TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTangOrder"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#D3D3D3"
                android:text="+"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>